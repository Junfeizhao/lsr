/* miniprogram/pages/query/query.wxss */
.wrap1{
  background: #fff;
  padding:10px 5px;
  display: flex;
  justify-content: space-between;
  width:100%;
  height:32px;
  /* border:1px solid black; */
}
.input_wrap{
  position: relative;
  padding:0px 10px;
  display: flex;
  align-items: center;
  width:70%;
  height:39px;
  /* border:1px solid red; */
  border-radius: 3px;
  background:rgb(239,239,239);
}
.input_wrap input{
  margin-left:15px;
  letter-spacing: 1.5px;
  color:#8a8a8a;
  font-size: 15px;
}

.btn_wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 10px;
  width:15%;
  height:34px;
  /* border:1px solid black; */
  font-size: 15px;
  border:1px solid #bbb;
  border-radius: 3px;
}

.line{
  width:100%;
  height:1px;
  color:#666;
}
.wrap2{
  padding:10px 0;
  font-size: 14px;
  color:#888;
  width:100%;
  height:32px;
  background:#fff;
  display: flex;
  justify-content: space-evenly;
}


.item_default{
  padding:5px 0;
}
.item_active{
  padding:5px 0;
  border-bottom: 1px solid #bbb;
}

.noresult{
  text-align: center;
  margin:200px auto;
  width:150px;
  height:120px;
  /* border:1px solid black; */
}
.noresult image{
  width:100%;
  height:100%;
}
.noresult .text{
  font-size:14px;
  color:#666;
}

